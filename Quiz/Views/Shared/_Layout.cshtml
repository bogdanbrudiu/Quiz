<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-type" content="text/html; charset=UTF-8"/>
        <title>@ViewBag.Title - @Resource.QuizTitle</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

  


        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
       @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>




  <link href="~/Content/dynatree/skin/ui.dynatree.css" rel="stylesheet" type="text/css">
  <script src="~/Scripts/jquery.dynatree.js" type="text/javascript"></script>

  <link href="~/Content/jquery.treetable.css" rel="stylesheet" type="text/css">
    <link href="~/Content/jquery.treetable.theme.default.css" rel="stylesheet" type="text/css">
  <script src="~/Scripts/jquery.treetable.js" type="text/javascript"></script>

  <script src="~/Scripts/jquery.watermark.js" type="text/javascript"></script>
  <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>

    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><!--@Html.ActionLink(Resource.QuizTitle, "Index", "Home")--><a href="/Home"><img src="~/Images/logo.png" alt="logo" border="0" /></a></p>
                </div>
                <div class="float-right"><div style="float:right; margin-bottom:10px;">
                @*@Html.ActionLink(Resource.EN, "ChangeCulture", "ChangeCulture", new { lang = "en-US", returnUrl = ViewContext.HttpContext.Request.Url.PathAndQuery }, null)*@
                @*@Html.ActionLink(Resource.RO, "ChangeCulture", "ChangeCulture", new { lang = "ro-RO", returnUrl = ViewContext.HttpContext.Request.Url.PathAndQuery }, null)*@
		</div><div style="clear:both;"></div>
 		    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                                <li>@Html.ActionLink(Resource.Home, "Index", "Home", new { area = ""}, null)</li>
                            @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
                            {
                                <li>@Html.ActionLink(Resource.Users, "Index", "User")</li>
                            }
                            @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink(Resource.Tests, "Index", "Test")</li>
                                <li>@Html.ActionLink(Resource.QuestionCategories, "Index", "QuestionCategory")</li>
                                <li>@Html.ActionLink(Resource.Questions, "Index", "Question")</li>
                                <li>@Html.ActionLink(Resource.Quizzes, "Index", "Quiz")</li>
                            }

                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - <a href="mailto:bogdan@brudiu.ro" target="blank">Bogdan-Ioan BRUDIU</a></p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
